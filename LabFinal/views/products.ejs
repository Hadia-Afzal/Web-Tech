<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0089f7;
            --secondary: #f1991b;
        }
        .product-card {
            height: 100%;
            transition: transform 0.3s ease;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .price-tag {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--secondary);
        }
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: var(--secondary);
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-headset me-2"></i>BeCallCenter
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/products">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-orders">My Orders</a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <a href="/cart" class="nav-link position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <% if (cart.items.length > 0) { %>
                            <span class="cart-badge"><%= cart.items.reduce((sum, item) => sum + item.quantity, 0) %></span>
                        <% } %>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="mb-3">Our Premium Services</h1>
                <p class="lead">Choose from our professional call center solutions</p>
                
                <!-- Cart Summary -->
                <% if (cart.items.length > 0) { %>
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-shopping-cart me-2"></i>
                            <strong><%= cart.items.reduce((sum, item) => sum + item.quantity, 0) %></strong> item(s) in cart
                            | Total: <strong>$<%= cart.total.toFixed(2) %></strong>
                        </div>
                        <div>
                            <a href="/cart" class="btn btn-sm btn-outline-info me-2">
                                <i class="fas fa-eye me-1"></i>View Cart
                            </a>
                            <a href="/order/preview" class="btn btn-sm btn-primary">
                                <i class="fas fa-arrow-right me-1"></i>Checkout
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card product-card">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-headset fa-2x"></i>
                                </div>
                            </div>
                            
                            <h5 class="card-title text-center"><%= product.name %></h5>
                            <p class="card-text text-center text-muted"><%= product.description %></p>
                            
                            <div class="text-center mb-3">
                                <span class="price-tag">$<%= product.price.toFixed(2) %></span>
                                <span class="text-muted">/month</span>
                            </div>
                            
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <input type="hidden" name="name" value="<%= product.name %>">
                                <input type="hidden" name="price" value="<%= product.price %>">
                                
                                <div class="mb-3">
                                    <label for="quantity-<%= product.id %>" class="form-label">Quantity:</label>
                                    <select name="quantity" id="quantity-<%= product.id %>" class="form-select">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <option value="<%= i %>"><%= i %></option>
                                        <% } %>
                                    </select>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Cart Actions -->
        <% if (cart.items.length > 0) { %>
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">Ready to checkout?</h5>
                            <p class="text-muted mb-0">Complete your purchase with our secure checkout</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <a href="/cart" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-edit me-1"></i>Edit Cart
                            </a>
                            <a href="/order/preview" class="btn btn-success">
                                <i class="fas fa-lock me-1"></i>Secure Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        
        <!-- Discount Banner -->
        <div class="alert alert-success mt-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-tag fa-2x me-3"></i>
                <div>
                    <h5 class="mb-1">Special Discount!</h5>
                    <p class="mb-0">Use coupon code <strong>SAVE10</strong> during checkout to get 10% off your total order!</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>BeCallCenter Services</h5>
                    <p>Professional call center solutions for businesses</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/my-orders" class="btn btn-outline-light btn-sm me-2">
                        <i class="fas fa-history me-1"></i>Order History
                    </a>
                    <a href="/admin/orders?admin=true" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-user-shield me-1"></i>Admin Panel
                    </a>
                </div>
            </div>
            <hr class="bg-light">
            <p class="text-center mb-0">&copy; 2025 Web Lab Exam Final G4. All features implemented for exam requirements.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>