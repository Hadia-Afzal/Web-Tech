<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - E-commerce Lab Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0089f7;
            --primary-dark: #0074d4;
            --secondary: #f1991b;
            --secondary-dark: #d88713;
            --dark: #1a1b1c;
            --light: #f8f9fa;
        }
        .navbar {
            background-color: var(--dark);
        }
        .hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
                        url('https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
        }
        .product-card {
            transition: transform 0.3s ease;
            border: 1px solid #dee2e6;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: var(--secondary);
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .discount-tag {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-headset me-2"></i>BeCallCenter
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-orders">My Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders?admin=true">Admin</a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <a href="/cart" class="nav-link position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <% if (cart.items.length > 0) { %>
                            <span class="cart-badge"><%= cart.items.reduce((sum, item) => sum + item.quantity, 0) %></span>
                        <% } %>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero text-center">
        <div class="container">
            <h1 class="display-4 mb-4">Premium Call Center Solutions</h1>
            <p class="lead mb-4">Professional services for your business growth</p>
            <a href="/products" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Browse Services
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="mb-3">Welcome to E-commerce Lab Final Exam</h2>
                <p class="lead">This application demonstrates complete order management system</p>
                <div class="row mt-4">
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                                <h5>Shopping Cart</h5>
                                <p>Add services to cart and proceed to checkout</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-tags fa-3x text-success mb-3"></i>
                                <h5>Discount Codes</h5>
                                <p>Use code <strong>SAVE10</strong> for 10% discount</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-history fa-3x text-warning mb-3"></i>
                                <h5>Order History</h5>
                                <p>View all your past orders by email</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                                <h5>Admin Panel</h5>
                                <p>Manage orders and update status</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-rocket me-2"></i>Get Started</h5>
                    </div>
                    <div class="card-body">
                        <p>Start by browsing our premium services:</p>
                        <a href="/products" class="btn btn-primary">
                            <i class="fas fa-store me-2"></i>View All Services
                        </a>
                        <a href="/order/preview" class="btn btn-outline-primary ms-2">
                            <i class="fas fa-eye me-2"></i>Order Preview
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Manage Orders</h5>
                    </div>
                    <div class="card-body">
                        <p>Track and manage your orders:</p>
                        <a href="/my-orders" class="btn btn-success">
                            <i class="fas fa-search me-2"></i>Find My Orders
                        </a>
                        <a href="/admin/orders?admin=true" class="btn btn-outline-success ms-2">
                            <i class="fas fa-cog me-2"></i>Admin Panel
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cart Summary -->
        <% if (cart.items.length > 0) { %>
            <div class="card mt-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Your Cart</h5>
                </div>
                <div class="card-body">
                    <p>You have <%= cart.items.length %> item(s) in your cart. Total: $<%= cart.total.toFixed(2) %></p>
                    <a href="/cart" class="btn btn-warning">
                        <i class="fas fa-shopping-cart me-2"></i>View Cart
                    </a>
                    <a href="/order/preview" class="btn btn-outline-warning ms-2">
                        <i class="fas fa-arrow-right me-2"></i>Checkout
                    </a>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>BeCallCenter</h5>
                    <p>E-commerce Lab Final Exam Project</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2025 Web Lab Exam G4. All rights reserved.</p>
                    <p class="text-muted">Express.js + MongoDB + EJS</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>