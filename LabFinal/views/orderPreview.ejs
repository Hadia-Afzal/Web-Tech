<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0089f7;
            --secondary: #f1991b;
        }
        .order-summary {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 25px;
        }
        .discount-badge {
            background-color: #28a745;
            color: white;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.85em;
            font-weight: bold;
        }
        .cart-item {
            border-bottom: 1px solid #dee2e6;
            padding: 15px 0;
        }
        .cart-item:last-child {
            border-bottom: none;
        }
        .total-row {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 5px;
            font-weight: bold;
        }
        .step-indicator {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }
        .step {
            text-align: center;
            flex: 1;
            position: relative;
        }
        .step-number {
            width: 40px;
            height: 40px;
            background-color: #6c757d;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            font-weight: bold;
        }
        .step.active .step-number {
            background-color: var(--primary);
        }
        .step.completed .step-number {
            background-color: var(--secondary);
        }
        .step-line {
            position: absolute;
            top: 20px;
            left: 50%;
            width: 100%;
            height: 2px;
            background-color: #dee2e6;
            z-index: -1;
        }
        .step:last-child .step-line {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-headset me-2"></i>BeCallCenter
            </a>
        </div>
    </nav>

    <div class="container py-5">
        <!-- Step Indicator -->
        <div class="step-indicator">
            <div class="step completed">
                <div class="step-number">1</div>
                <div>Cart</div>
                <div class="step-line"></div>
            </div>
            <div class="step active">
                <div class="step-number">2</div>
                <div>Order Preview</div>
                <div class="step-line"></div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div>Confirmation</div>
                <div class="step-line"></div>
            </div>
        </div>

        <!-- Error Messages -->
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Success Messages -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <h1 class="mb-4">Order Preview</h1>
        <p class="lead mb-5">Review your order and enter customer information</p>

        <div class="row">
            <!-- Order Items -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Order Items</h5>
                    </div>
                    <div class="card-body">
                        <% if (cart.items && cart.items.length > 0) { %>
                            <% cart.items.forEach((item, index) => { %>
                                <div class="cart-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h6 class="mb-1"><%= item.name %></h6>
                                            <small class="text-muted">Service ID: <%= item.productId %></small>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="badge bg-secondary">Qty: <%= item.quantity %></span>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <small>$<%= item.price.toFixed(2) %> each</small>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <strong>$<%= item.total.toFixed(2) %></strong>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Your cart is empty</p>
                                <a href="/products" class="btn btn-primary">Browse Services</a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Customer Information Form -->
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Customer Information</h5>
                    </div>
                    <div class="card-body">
                        <form action="/order/confirm" method="POST" id="orderForm">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="name" required 
                                           placeholder="John Doe">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email Address <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" name="email" required 
                                           placeholder="john@example.com">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Shipping Address <span class="text-danger">*</span></label>
                                    <textarea class="form-control" name="address" rows="3" required 
                                              placeholder="123 Main St, City, Country"></textarea>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                    <input type="tel" class="form-control" name="phone" required 
                                           placeholder="(123) 456-7890">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Coupon Code</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="coupon" 
                                               value="<%= cart.discountCode || '' %>"
                                               placeholder="Enter SAVE10 for 10% off">
                                        <button type="button" class="btn btn-outline-secondary" 
                                                onclick="applyCoupon()">
                                            Apply
                                        </button>
                                    </div>
                                    <% if (discount.applied) { %>
                                        <small class="text-success">
                                            <i class="fas fa-check-circle me-1"></i>
                                            <%= discount.message %>
                                        </small>
                                    <% } %>
                                </div>
                            </div>

                            <div class="mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-between">
                                    <a href="/cart" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Cart
                                    </a>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-lock me-2"></i>Confirm Order
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="order-summary sticky-top" style="top: 20px;">
                    <h5 class="mb-4">Order Summary</h5>
                    
                    <!-- Discount Alert -->
                    <% if (discount.applied) { %>
                        <div class="alert alert-success mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tag me-2"></i>
                                <div>
                                    <strong class="d-block">Discount Applied!</strong>
                                    <small>Code: <%= discount.code %> - <%= discount.percentage %>% off</small>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Order Details -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$<%= cart.subtotal.toFixed(2) %></span>
                        </div>
                        
                        <% if (cart.discount && cart.discount > 0) { %>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Discount:</span>
                                <span class="text-success">-$<%= cart.discount.toFixed(2) %></span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>After Discount:</span>
                                <span>$<%= (cart.subtotal - cart.discount).toFixed(2) %></span>
                            </div>
                        <% } %>
                        
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (8%):</span>
                            <span>$<%= tax.toFixed(2) %></span>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between total-row">
                            <strong>Grand Total:</strong>
                            <strong>$<%= totalWithTax.toFixed(2) %></strong>
                        </div>
                    </div>
                    
                    <!-- Order Notes -->
                    <div class="alert alert-info mt-4">
                        <h6><i class="fas fa-info-circle me-2"></i>Order Notes</h6>
                        <ul class="mb-0 small">
                            <li>All prices are in USD</li>
                            <li>Tax calculated at 8%</li>
                            <li>No hidden fees</li>
                            <li>Instant service activation</li>
                        </ul>
                    </div>
                    
                    <!-- Item Count -->
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            <i class="fas fa-box me-1"></i>
                            <%= cart.items.length %> item(s) in order
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6>BeCallCenter Checkout</h6>
                    <p class="small mb-0">Secure and reliable order processing</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="small mb-0">
                        <i class="fas fa-lock me-1"></i>SSL Secured
                        <span class="mx-2">|</span>
                        <i class="fas fa-shield-alt me-1"></i>PCI Compliant
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function applyCoupon() {
            const couponInput = document.querySelector('input[name="coupon"]');
            const form = document.getElementById('orderForm');
            
            // Add coupon to URL for middleware to pick up
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('coupon', couponInput.value);
            
            // Reload page with coupon parameter
            window.location.href = currentUrl.toString();
        }
        
        // Auto-fill demo data for testing
        document.addEventListener('DOMContentLoaded', function() {
            // Only fill if all fields are empty (for demo purposes)
            const nameField = document.querySelector('input[name="name"]');
            const emailField = document.querySelector('input[name="email"]');
            const addressField = document.querySelector('textarea[name="address"]');
            const phoneField = document.querySelector('input[name="phone"]');
            
            if (nameField && !nameField.value) {
                nameField.value = 'Demo Customer';
            }
            if (emailField && !emailField.value) {
                emailField.value = 'customer@example.com';
            }
            if (addressField && !addressField.value) {
                addressField.value = '123 Main Street, New York, NY 10001';
            }
            if (phoneField && !phoneField.value) {
                phoneField.value = '(555) 123-4567';
            }
        });
    </script>
</body>
</html>